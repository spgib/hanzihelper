<main>
  <h1>Hanzi Helper Dashboard</h1>
  <div class='tab'>
    <button class='tab-link'>Learn</button>
    <button class='tab-link'>Info</button>
  </div>
  <div id='learn-tab' class='tab-content hidden'>
    <div class='dash__decks'>
      {{#if noDecks}}
        <h3>You don't have any decks! Add an existing deck or create one of your
          own!</h3>
      {{else}}
        <ul class='decks__list'>
          {{#each decks}}
            <li id="{{this.id}}" class='decks__item'>
              <a class='decks__item-main' href='/learn/deck/{{this.id}}'>
                <h3>{{this.title}}</h3>
                <div class='cardStats'>
                  <p class='learn'>{{this.unlearnedCards}}</p>
                  <p class='revise'>{{this.revisionCards}}</p>
                  <p class='refresh'>{{this.refreshCards}}</p>
                </div>
              </a>
            </li>
          {{/each}}
        </ul>
      {{/if}}
    </div>
  </div>
  <div id='info-tab' class='tab-content hidden'>
    <div class='dash__decks-info'>
      {{#if noDecks}}
        <h3>You don't have any decks! Add an existing deck or create one of your
          own!</h3>
      {{else}}
        <ul class='decks__list'>
          {{#each decks}}
            <li class='decks__item'>
              <button class='collapsible'>
                {{this.title}}
              </button>
              <div class='collapsible-content hidden'>
                <h4 class="collapsible__info-label">Description</h4>
                <p class="collapsible__description">{{this.description}}</p>
                <h4 class="collapsible__info-label">Total Cards</h4>
                <p class="collapsible__total-cards">{{this.totalCards}}</p>
                <h4 class="collapsible__info-label">Learning Since</h4>
                <p class="collapsible__learning-since">{{this.createdAt}}</p>
                <h4 class="collapsible__info-label">Publicly Visible</h4>
                <p class="collapsible__visibility">{{this.isPublic}}</p>
                <button
                  class='collapsible__edit-btn'
                  type='button'
                >Edit</button>
                <button
                  class='collapsible__delete-btn'
                  type='button'
                >Delete</button>
              </div>
            </li>
          {{/each}}
        </ul>
      {{/if}}
    </div>
  </div>
  <div class='dash__actions'>
    <ul class='dash__action-list'>
      <li class='dash__action-item'>
        <button type='button'>ADD</button>
      </li>
      <li class='dash__action-item hidden'>
        <button type='button'>Add deck</button>
      </li>
      <li class='dash__action-item hidden'>
        <button type='button'>Create custom deck</button>
      </li>
      <li class='dash__action-item hidden'>
        <button type='button'>Add card</button>
      </li>
    </ul>
  </div>
</main>